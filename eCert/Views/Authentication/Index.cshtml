@model eCert.Models.ViewModel.NormalLoginViewModel
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content=""
          name="description" />
    <meta content="Coderthemes" name="author" />
    <!--custom css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/custom/login.css" />
    <!-- third party css -->
    <link href="/assets/css/vendor/dataTables.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <link href="/assets/css/vendor/responsive.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <!-- third party css end -->
    <!-- App css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="/assets/css/app.min.css"
          rel="stylesheet"
          type="text/css"
          id="light-style" />

</head>


<div class="row">
    <!--Content-->
    <div class="col-12 col-lg-6">
        <div class="logo-fpt-edu">
            <img style="width: 100%;" src="~/Assets/images/custom/logo-fpt-edu-2.png" />
        </div>
        
        <div id="login-form">
            <p class="title-login">Welcome to eCert!</p>
            @using (Html.BeginForm("Index", "Authentication", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
            {

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!--Email-->
                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Email, new { @class = "label" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--Password-->
                <div class="form-group mt-3">
                    @Html.LabelFor(m => m.Password, new { @class = "label" })
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        
                    </div>
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger mt-2" })
                </div>
                <!--Login-->
                <div class="login mt-3">
                    <input type="submit" value="LOGIN" class="btn btn-primary btn-login w-100" />
                </div>
            }
            <p class="mt-3 text-center" style="color: #8C98A9">OR</p>
            <div class="mt-3">
                <div class="border">
                    <a class="btn w-100" href="@Url.Action("SignInGoogle", new { type = "Google" })"><img class="mr-2" src="~/Assets/images/custom/google.png" />Login using Google</a>
                </div>
            </div>
        </div>
    </div>
    <!--Background-->
    <div class="d-none d-lg-block col-lg-6">
        <img style="width: 100%; height: 947px" src="~/Assets/images/custom/background-login.png" />
    </div>
</div>



