@model eCert.Models.ViewModel.NormalLoginViewModel
@{
    Layout = null;
}

<head>
    <title>Login</title>
    <!--custom css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/custom/login.css" />
    <link rel="stylesheet"
          type="text/css"
          href="~/Content/bootstrap.css" />
    <link rel="stylesheet"
          type="text/css"
          href="~/Content/bootstrap.min.css" />


    @*<link href="~/Assets/CSS/icons.min.css" rel="stylesheet" type="text/css" />

        <link href="~/Assets/css/app.min.css"
              rel="stylesheet"
              type="text/css"
              id="light-style" />*@


    <!--Custom JS-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/Assets/js/custom/login.js"></script>

</head>




<body>
    <div class="row">
        <!--Content-->
        <div class="col-12 col-lg-6">
            <div class="logo-fpt-edu">
                <img style="width: 100%;" src="~/Assets/images/custom/logo-fpt-edu-2.png" />
            </div>

            <div id="login-form">
                <p class="title-login">Welcome to eCert!</p>

                @using (Html.BeginForm("Index", "Authentication", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                {

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!--Email-->
                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Email, new { @class = "label" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Password-->
                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Password, new { @class = "label" })
                        <div class="">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                        </div>
                    </div>
                    <div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger mt-2" })
                    </div>
                    <!--Login-->
                    <div class="login mt-3">
                        <input type="submit" value="LOGIN" class="btn btn-primary btn-login w-100" />
                    </div>
                }
                <p class="mt-3 text-center" style="color: #8C98A9">OR</p>
                <div class="container">
                    <div class="row">
                        
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Choose Education...
                            </button>
                            <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item" tabindex="-1" href="#">Đại học FPT</a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">Campus Hà Nội</li>
                                        <li class="dropdown-item">Campus Cần Thơ</li>
                                        <li class="dropdown-item">Campus Hồ Chí Minh</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="border">
                        <a class="btn w-100" href="@Url.Action("SignInGoogle", new { type = "Google" })"><img class="mr-2" src="~/Assets/images/custom/google.png" />Login using Google</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Background-->
        <div class="d-none d-lg-block col-lg-6">
            <img style="width: 100%; height: 947px" src="~/Assets/images/custom/background-login.png" />
        </div>
    </div>
</body>








