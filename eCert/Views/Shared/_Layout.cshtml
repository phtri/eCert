<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eCert</title>
    <link rel="stylesheet" href="@(Url.Content("~/Assets/CSS/reset.css"))" />
    @Styles.Render("~/Assets/Bootstrap_CSS/css")
    <link rel="stylesheet" href="@(Url.Content("~/Assets/CSS/layout.css"))" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
