@model eCert.Models.ViewModel.EducationSystemViewModel
@using eCert.Models.ViewModel
@using eCert.Utilities
<script src="~/assets/js/custom/loadListEdu.js"></script>
@{
    int count = 0;
}


<div class="">
    @if (ViewBag.Pagination.PagingData.Count == 0)
    {
        <div class="justify-content-center row">There is no Education System</div>
    }
    else
    {
        <table class="table table-striped table-centered mb-0">
            <thead>
                <tr class="row">
                    <th class="col-2">No</th>
                    <th class="col-6">Name</th>
                    <th class="col-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EducationSystemViewModel educationSystemViewModel in ViewBag.Pagination.PagingData)
                {
                    count++;
                    <tr class="row">
                        <td class="col-2">@count</td>
                        <td class="col-6">@educationSystemViewModel.EducationName</td>
                        <td class="col-4 table-action">
                            @*<a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-pencil"></i></a>*@
                            <a href="#" onclick="handleDeleteEdu('Alert', 'Are you sure you want to delete this Education system?', @educationSystemViewModel.EducationSystemId)" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

   

</div>

@Html.Partial("_ConfirmDialog")


