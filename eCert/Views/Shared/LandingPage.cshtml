@{ 
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>eCert - Electronic Certificate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- App css -->
    <link href="~/Assets/CSS/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/css/app.min.css" rel="stylesheet" type="text/css" id="light-style" />
    <link href="~/Assets/css/app-dark.min.css" rel="stylesheet" type="text/css" id="dark-style" />
    <style>
        body {
            background-color: #FAFBFE;
        }

        .navbar {
            background-color: #FFFFFF;
        }

        .seach-field {
            border: 1px solid #e67e22;
        }

        .search-button {
            background-color: #e67e22;
            border-color: #e67e22;
        }

            .search-button:hover {
                color: #fff;
                background-color: #f39c12;
                border-color: #f39c12;
            }

        .form-control:focus {
            background-color: #fff;
            border-color: #e67e22;
            outline: 0;
            box-shadow: none;
        }

        .main-content {
            padding-right: 0px;
            padding-left: 0px;
            width: 100%;
        }

        .row {
            width: 100%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
</head>

<body class="loading" data-layout-config='{"darkMode":false}'>

    <!-- NAVBAR START -->
    <header>
        <nav class="navbar navbar-expand-lg py-lg-3 navbar-light">
            <div class="container-fluid">
                <!-- logo -->
                <a href="#" class="navbar-brand mr-lg-5">
                    <img src="~/Assets/images/tochuc.png" alt="" class="logo-dark" height="70" />
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="mdi mdi-menu"></i>
                </button>

                <!-- menu -->
                <div class="collapse navbar-collapse" id="navbarNavDropdown">

                    <!-- left menu -->
                    <ul class="navbar-nav mr-auto align-items-center">
                        <li class="nav-item mx-lg-1">
                            <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item mx-lg-1">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                        <li class="nav-item mx-lg-1">
                            <a class="nav-link" href="/Authentication/Index">Login</a>
                        </li>
                    </ul>

                    <!-- right menu -->
                    <form class="d-flex">
                        <!-- <input class="form-control me-2 " type="text" placeholder="Search certificate..." aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div> -->

                        <div class="input-group">
                            <input type="text" class="form-control  seach-field" placeholder="Search certificate..." id="top-search" />
                            
                            <div class="input-group-append">
                                
                                <button class="btn btn-primary search-button" id="search-btn" type="button" onclick="">
                                    Search
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </nav>
    </header>
    <!-- NAVBAR END -->
    <!-- START CONTENT -->
    <main>

        <!-- IMAGE  -->
        <div class="image">
            <img src="~/Assets/images/abc.png" class="img-fluid" alt="Su menh FPT">
        </div>
        <!-- CONTENT  -->
        <main>

            <!-- IMAGE  -->
            <section class="hero-section">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="mt-md-4">
                                <h2 class="text-black font-weight-normal mb-4 mt-3 hero-title">
                                    Welcome to <span style="color:#727CF5">eCert</span>
                                </h2>
                                <p class="mb-4 font-16 text-black">
                                    eCert is a powerful certificate management system, the activity of management, facilitating, and executing every certificate process necessary for education,
                                    making the management of certificates convenient and easy, saving much more time for Fpt's students
                                </p>
                                <p class="mb-4 font-16 text-black-50">
                                    eCert is sponsored by <span style="color:#F39C12;">FPT Education</span>
                                </p>

                                <p class="mb-4 font-16 text-black-50">
                                    <button class="btn btn-primary" id="search-btn" type="button" onclick="">
                                        Start using now
                                    </button>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-5 offset-md-2">
                            <div class="text-md-right mt-3 mt-md-0">
                                <img src="~/Assets/images/ecert.png" alt="" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </main>
    <!-- END CONTENT -->
    <!-- bundle -->
    <script src="~/Assets/js/vendor.min.js"></script>
    <script src="~/Assets/js/app.min.js"></script>
</body>
</html>
