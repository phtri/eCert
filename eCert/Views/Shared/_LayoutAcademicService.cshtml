<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>eCert - Electronic Certificate</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content=""
          name="description" />
    <meta content="Coderthemes" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/certification-icon.png" />

    <!-- third party css -->
    <link href="/assets/css/vendor/dataTables.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <link href="/assets/css/vendor/responsive.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <!-- third party css end -->
    <!-- App css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="/assets/css/app.min.css"
          rel="stylesheet"
          type="text/css"
          id="light-style" />
</head>

<body class="loading"
      data-layout-config='{"leftSideBarTheme":"dark","layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":false, "showRightSidebarOnStart": true}'>
    <!-- Begin page -->
    <div class="wrapper">


        <!-- ========== Left Sidebar Start ========== -->
        <div class="left-side-menu">
            <!-- LOGO -->
            <a href="/Certificate/Index" class="logo text-center logo-light pt-1">
                <span class="logo-lg">
                    <img class="image-logo" src="/assets/images/cert_logo.png" alt="" height="16" style="width: 116px; height: 52px;" />
                </span>
                <span class="logo-sm">
                    <img src="" alt="" height="16" />
                </span>
            </a>

            <div class="h-100" id="left-side-menu-container" data-simplebar>
                <!--- Sidemenu -->
                <ul class="metismenu side-nav">
                    <li class="side-nav-title side-nav-item">Navigation</li>
                    <li class="side-nav-item">
                        <a href="/AcademicService/Index" class="side-nav-link">
                            <i class="uil-home-alt"></i>
                            <span> View report </span>
                        </a>
                    </li>
                    <li class="side-nav-item">
                        <a href="javascript: void(0);" class="side-nav-link">
                            <i class="dripicons-document"></i>

                            <span> Update Owner's Email (chua lam) </span>
                        </a>
                    </li>
                </ul>

                <!-- Help Box -->
                <!-- end Help Box -->
                <!-- End Sidebar -->

                <div class="clearfix"></div>
            </div>
            <!-- Sidebar -left -->
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">
                <!-- Topbar Start -->
                <div class="navbar-custom">
                    <img style="width: 10%" src="~/Assets/images/custom/logo-fpt-edu-2.png">
                    <ul class="list-unstyled topbar-right-menu float-right mb-0">
                        <li class="dropdown notification-list">
                            <a class="nav-link dropdown-toggle nav-user arrow-none mr-0"
                               data-toggle="dropdown"
                               href="#"
                               role="button"
                               aria-haspopup="false"
                               aria-expanded="false">
                                <span class="account-user-avatar">
                                    <img src="/assets/images/users/thanhha.png"
                                         alt="user-image"
                                         class="rounded-circle" />
                                </span>
                                <span>
                                    <span class="account-user-name">@Session["Fullname"]</span>
                                    <span class="account-position">@Session["RollNumber"]</span>
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-animated topbar-dropdown-menu profile-dropdown">
                                <!-- item-->
                                <div class="dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Welcome !</h6>
                                </div>

                                <!-- item-->
                                <a href="javascript:void(0);"
                                   class="dropdown-item notify-item">
                                    <i class="mdi mdi-account-circle mr-1"></i>
                                    <span>My Account</span>
                                </a>

                                <!-- item-->
                                <a href="javascript:void(0);"
                                   class="dropdown-item notify-item">
                                    <i class="mdi mdi-account-edit mr-1"></i>
                                    <span>Settings</span>
                                </a>


                                <a href="/Authentication/SignOut"
                                   class="dropdown-item notify-item">
                                    <i class="mdi mdi-logout mr-1"></i>
                                    <span>Logout</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button class="button-menu-mobile open-left disable-btn">
                        <i class="mdi mdi-menu"></i>
                    </button>

                </div>
                <!-- end Topbar -->
                <!-- Start Content-->
                <div class="container-fluid">
                    <!-- start page title -->
                    <div class="row" style="padding: 1.5rem 1.5rem 0 1.5rem;;">
                        <div class="col-12">
                            <div class="page-title-box">
                                <h2>@ViewBag.Title</h2>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    @RenderBody()

                    <!-- End home screen -->
                </div>
                <!-- container -->
            </div>
            <!-- content -->
            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row"></div>
                </div>
            </footer>
            <!-- end Footer -->
        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>

</body>


</html>

<script src="/assets/js/vendor.min.js"></script>
<script src="/assets/js/app.min.js"></script>