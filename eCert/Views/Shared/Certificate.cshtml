@{
    Layout = null;
}

@model eCert.Models.ViewModel.CertificateViewModel



<head>
    <link href="/assets/css/vendor/dataTables.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <link href="/assets/css/vendor/responsive.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <!-- third party css end -->
    <!-- App css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="/assets/css/app.min.css"
          rel="stylesheet"
          type="text/css"
          id="light-style" />
    <!--custom css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/custom/templateCertificate.css" />
</head>


<body class="d-flex bg-border align-items-center justify-content-center">
    <!--Left content-->
    <div class="mr-5">
        <div class="">
            <img src="~/Assets/images/custom/logo-fpt-uni.jpg" />
        </div>
        <div class="mt-4" style="text-align: center;">
            <div style="color: #394761">
                <span class="pertetua-big">CERTIFICATE</span>
                <span style="font: italic normal normal 20px/26px Lucida Calligraphy;">of </span>
                <span class="pertetua-big">ACHIEVEMENT</span>
            </div>
            <div class="mt-4 presented-to">This certificate is presented to:</div>
            <div class="mt-4 owner">@Model.FullName</div>
            <div class="mt-4 successfully">Has successfully completed the</div>
            <div class="mt-4 course">@Model.CertificateName</div>
        </div>
        <div class="d-flex justify-content-between mt-5" style="padding-left: 20%; padding-right: 20%">
            <div class="signature-date">Date</div>
            <div class="signature-date">Signature</div>
        </div>
    </div>
    <!--Right content-->
   <div class="ml-5">
        <img src="~/Assets/images/custom/logo-fpt-edu.jpg" />
    </div>
</body>
