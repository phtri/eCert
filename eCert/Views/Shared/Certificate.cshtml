@{
    Layout = null;
}

@model eCert.Models.ViewModel.CertificateViewModel
@using eCert.Utilities


<head>
    <link href="/assets/css/vendor/dataTables.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <link href="/assets/css/vendor/responsive.bootstrap4.css"
          rel="stylesheet"
          type="text/css" />
    <!-- third party css end -->
    <!-- App css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="/assets/css/app.min.css"
          rel="stylesheet"
          type="text/css"
          id="light-style" />
    <!--custom css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/custom/templateCertificate.css" />
</head>


<body class="d-flex bg-border align-items-center justify-content-center">
    <!--Left content-->
    <div class="mr-5 mt-3">
        <div class="">
            <img class="logo-fpt" src="~/Assets/images/custom/logo-fpt-uni.png" />
        </div>
        <div class="mt-4">
            <div style="color: #394761">
                <span class="pertetua-big">CERTIFICATE OF ACHIEVEMENT</span>
            </div>
            <div class="mt-4 presented-to text-uppercase">This certificate is presented to</div>
            <div class="mt-4 owner">@Model.FullName</div>
            <div class="mt-4 successfully text-uppercase">Has successfully completed the</div>
            <div class="mt-3 course text-uppercase">@Model.CertificateName</div>
            <div class="d-flex justify-content-between mt-10">
                <div class="signature-date pt-2">Date</div>
                <div class="signature-date pt-2">Signature</div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-5">
            <div class="text-right">
                <h4>View certificate at @Constants.Url.BASE_DOMAIN/Home/Share?url=@Model.Url</h4>
                <p>FPT Education has confirmed the identity of this individual and their participation in the course</p>
            </div>
            
        </div>
        
    </div>
    <!--Right content-->
   <div class="ml-5">
        <img class="reward" src="~/Assets/images/custom/logo-fpt-edu.jpg" />
    </div>
</body>
