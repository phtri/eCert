@model eCert.Models.ViewModel.ReportViewModel
<!-- custom js -->
@using (Html.BeginForm("AddReport", "Certificate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="row col-12 justify-content-center">
            <div class="card col-6">
                <div class="card-body">
                    <h3 class="text-center mb-4">Add Report</h3>
                    <div class="form-group mb-3">
                        <label for="simpleinput">Title</label>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Your title report" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        <label for="simpleinput">Name</label>
                        @Html.EditorFor(model => model.CertificateName, new { htmlAttributes = new { @class = "form-control", placeholder = "Your certificate name", @readonly = "readonly" } })
                        @Html.HiddenFor(model => model.CertificateId)
                    </div>
                    <div class="form-group mb-3 certificate_link">
                        <label for="example-textarea">Description</label>
                        @Html.TextAreaFor(model => model.ReportContent, new { @class = "form-control pb-0", placeholder = "Description of report", rows = "5" })
                        @Html.ValidationMessageFor(model => model.ReportContent, "", new { @class = "text-danger" })
                        @*<p class="text-danger mt-1 cert_link">Certificate link is required</p>*@
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            SEND
                        </button>
                    </div>
                    <div>
                        @ViewBag.Message
                        @TempData["Message"]
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<!-- Display message to user -->
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
              alert("aaa");
        });
    </script>
}

@Html.Partial("_NotificationDialog")