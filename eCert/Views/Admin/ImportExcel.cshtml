@using eCert.Models.ViewModel
@model eCert.Models.ViewModel.ImportExcel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!--Custom css-->
<link href="~/Assets/CSS/custom/import.css"
      rel="stylesheet"
      type="text/css" />
<!--Jquery-->
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<!--Custom js-->
<script src="~/Assets/js/custom/import.js"></script>

<div class="page-title-box">
    <div class="page-title-right">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Admin</a>
            </li>
            <li class="breadcrumb-item active">Import Excel</li>
        </ol>
    </div>
    <h4 class="page-title">Import excel</h4>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="text-muted font-14">
                    *Attention: Please upload file with extension .xlsx
                </p>
                <div class="d-flex mt-3 mb-3">
                    <div class="d-flex align-items-center">
                        @*<label>Select Organization: </label>
                        <div class="dropdown ml-2">
                            <button class="btn border-dark dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Choose
                            </button>
                            <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                                @foreach (EducationSystemViewModel education in ViewBag.ListEducationSystem)
                                {
                                    <li class="dropdown-submenu cursor-pointer">
                                        <p class="dropdown-item " tabindex="-1">@education.EducationName</p>
                                        <ul class="dropdown-menu">
                                            @foreach (CampusViewModel campus in education.ListCampus)
                                            {
                                                <li class="dropdown-item cursor-pointer">@campus.CampusName</li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>*@
                        <label class="mb-0">Organization: </label>
                        <select class="form-control select2 main-org ml-2" id="edusystem" style="width: 70%">
                            <option value="" selected disabled>Please select</option>
                            @foreach (EducationSystemViewModel education in ViewBag.ListEducationSystem)
                            {
                                <option value="@education.EducationSystemId">@education.EducationName</option>
                            }
                        </select>

                        <select class="form-control select2 sub-org ml-2" id="campusSelect" style="width: 70%">
                            <option value="" selected disabled>Please select</option>
                        </select>
                    </div>
                    @*<div class="d-flex align-items-center ml-2">
                        <label>Người ký: </label>
                        <select class="form-control select2 ml-2" style="width: 70%">
                            <option value="" selected disabled>Please select</option>
                            <option>Đại học FPT</option>
                            <option>Đại học Greenwich</option>
                            <option>California</option>
                            <option>Đại học Công nghệ Swinburne</option>
                            <option>Cao đẳng FPT Polytechnic</option>
                        </select>
                    </div>*@

                </div>
                @using (Html.BeginForm("ImportExcel", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="custom-file mb-3 col-2">
                        @Html.TextBoxFor(model => model.File, new { type = "file", accept = ".xls,.xlsx", @class = "custom-file-input", @id = "customFile" })
                        <label class="custom-file-label" for="customFile">Choose a file</label>
                    </div>
                    <div>
                        <button class="btn btn-primary" id="submitButton" type="submit">Submit</button>
                    </div>
                    @Html.ValidationMessageFor(model => model.File)
                    <div>
                        <h4>@ViewBag.MessageError</h4>
                    </div>
                }
            </div>
            <!-- end card-body -->
        </div>
        <!-- end card-->
    </div>
    <!-- end col-->
</div>




