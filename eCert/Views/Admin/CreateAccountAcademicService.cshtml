@model eCert.Models.ViewModel.UserViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("CreateAccountAcademicService", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "addForm" }))
{
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mb-4">Create Account Academic Service</h3>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="simpleinput">Name</label>
                            <div class="d-flex">
                                <div class="col-lg-4 pl-0">
                                    @*<input type="text" id="simpleinput" placeholder="First name" class="form-control">*@
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First name"} })

                                </div>
                                <div class="col-lg-4 px-0">
                                    @*<input type="text" id="simpleinput" placeholder="Middle name" class="form-control">*@
                                    @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control", placeholder = "Middle name" } })
                                </div>
                                <div class="col-lg-4 pr-0">
                                    @*<input type="text" id="simpleinput" placeholder="Last name" class="form-control">*@
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last name" } })
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email">Email</label>
                            @*<input type="email" id="example-email" name="example-email" class="form-control" placeholder="Email">*@
                            @Html.TextBoxFor(model => model.AcademicEmail, new { @type = "email", @class = "form-control"})

                        </div>
                        <div class="form-group">
                            <label class="mr-3" for="example-email">Gender</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio3" name="customRadio1" class="custom-control-input" checked>
                                <label class="custom-control-label" for="customRadio3">Male</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio4" name="customRadio1" class="custom-control-input">
                                <label class="custom-control-label" for="customRadio4">Female</label>
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="simpleinput">Phone number</label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone number" pattern="[0]{1}[0-9]{9}" required>
                        </div>
                        <div class="form-group">
                            <label for="example-date">Date of birth</label>
                            @Html.TextBoxFor(model => model.DOB, new { @type = "date", @class = "form-control"})
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">
                    CREATE
                </button>
            </div>
        </div>
    </div>

}


