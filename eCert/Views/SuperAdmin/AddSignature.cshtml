<div class="row">
    <div class="col-12 d-flex justify-content-center">
        <div class="card col-12 col-lg-6">
            <div class="card-body">
                <h3 class="page-title">Add Signature</h3>
                <div class="tab-pane show active card-body px-0" id="input-types-preview">
                    @using (Html.BeginForm("AddSignature", "SuperAdmin", FormMethod.Post, new { enctype = "multipart/form-data", id = "addEducationSystemSignature" }))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="">
                                    <div class="form-group">
                                        <label for="simpleinput">Signatory Full Name</label>
                                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Fullname" })
                                        <div class="mt-2">
                                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger mb-1" })
                                        </div>
                                    </div>
                                    
                                    <div class="form-group mt-2">
                                        <label>Education System</label>
                                        <select class="form-control" id="edusystem" name="EducationSystemId">
                                            <option selected disabled>Select Education System</option>
                                        </select>
                                        <div class="mt-2">
                                            @Html.ValidationMessageFor(model => model.EducationSystemId, "", new { @class = "text-danger mb-1" })
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                <div class="">
                                    <div class="form-group">
                                        <label for="simpleinput">Signatory Position</label>
                                        <div class="d-flex align-items-center">
                                            @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "Position" })
                                        </div>
                                        <div class="mt-2">
                                            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger mb-1" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Signature Image</label>
                                       
                                            <div class="custom-file">
                                                @Html.TextBox("SignatureImageFile", "", new { type = "file", @class = "custom-file-input", accept = ".jpg, .png,.jpeg", multiple = "multiple" })
                                                <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                                            </div>
                                            <div class="mt-2">
                                                @Html.ValidationMessageFor(model => model.SignatureImageFile, "", new { @class = "text-danger mb-1" })
                                            </div>

                                       
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row-->
                <div class="d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" value="Create Signatory" />
                </div>
                        
                    }
                </div> <!-- end preview-->
            </div>

        </div>
    </div>

</div>


