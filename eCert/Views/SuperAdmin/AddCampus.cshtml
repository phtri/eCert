@model eCert.Models.ViewModel.AddCampusViewModel
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}
<script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>
<link rel="stylesheet"
      type="text/css"
      href="~/assets/css/custom/share.css" />
<!--Custom js-->
<script src="~/Assets/js/custom/import.js"></script>
<div class="row">
    <div class="col-12 d-flex justify-content-center">
        <div class="card col-12 col-lg-6">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h3 class="page-title">Add Education System</h3>
                    <div class="">
                        <a class="btn btn-download d-none d-sm-block" href="/SuperAdmin/ManageCampus">
                            Back to Manage Campus
                        </a>
                        <a class="btn btn-download d-block d-sm-none" href="/SuperAdmin/ManageCampus">
                            Back
                        </a>
                    </div>
                </div>

                <div class="tab-pane show active card-body px-0 pt-0 mt-3" id="input-types-preview">
                    @using (Html.BeginForm("AddCampus", "SuperAdmin", FormMethod.Post, new { enctype = "multipart/form-data", id = "addCampus" }))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group required">
                                    <label class="control-label">Organization: </label>
                                    <select class="form-control" id="EduSystemId" name="EduSystemId">
                                        <option selected disabled>Select Education System</option>
                                    </select>
                                    <div class="mt-2">
                                        @Html.ValidationMessageFor(model => model.EduSystemId, "", new { @class = "text-danger mb-1" })
                                    </div>

                                </div>
                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                <div class="form-group required">
                                    <label class="control-label">Campus Name</label>
                                    @Html.EditorFor(model => model.CampusName, new { htmlAttributes = new { @class = "form-control", placeholder = "Campus name" } })
                                    <div class="mt-2">
                                        @Html.ValidationMessageFor(model => model.CampusName, "", new { @class = "text-danger mb-1" })
                                    </div>
                                </div>
                            </div>
                            <!-- end col -->
                        </div><!-- end row-->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>

                    }
                </div> <!-- end preview-->
            </div>
        </div>

    </div>
</div>
@Html.Partial("_AlertDialog")
@if (TempData["Msg"] != null)
{
    <script type="text/javascript">
       $(document).ready(function () {
           var data = '@TempData["Msg"]';
           $.NotificationApp.send("Message", data, "top-center", "Background color", "Icon");
          });
    </script>
}
else if (ViewBag.Msg != null)
{
    <script type="text/javascript">
       $(document).ready(function () {
           var data = '@ViewBag.Msg';
           $('#alertModal').modal('show');
           $('#confirmTitle').html('Alert');
           $('.modal-body').html(data);
          });
    </script>
}