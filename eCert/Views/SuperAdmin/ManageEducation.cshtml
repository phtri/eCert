@model List<eCert.Models.ViewModel.EducationSystemViewModel>
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}
<link rel="stylesheet"
      type="text/css"
      href="/assets/css/custom/share.css" />
<div class="row justify-content-center">
    <div class="card col-12 col-lg-6">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h3 class="page-title">Manage Education System</h3>
                <div class="">
                    <a class="btn btn-download" href="/SuperAdmin">
                        Back to Home
                    </a>
                </div>
            </div>

            <a href="/SuperAdmin/AddEducation" class="btn btn-primary mb-3 mt-2">Create Education System</a>
            @if (Model == null || Model.Count == 0)
            {

            }
            else
            {
                <table class="table table-striped table-centered mb-0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Education System Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td class="table-user">
                                    @Model[i].EducationName
                                </td>
                                <td class="table-action">
                                    <a href="javascript: void(0);" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                                    <a onclick="handleDeleteEducationSystem('Alert', 'Are you sure you want to delete this campus?')" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }

        </div>
    </div>
</div>


