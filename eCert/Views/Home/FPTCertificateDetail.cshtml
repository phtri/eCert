@{
    ViewBag.Title = "Detail";
}


<script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>
<!-- custom js -->
<script src="~/assets/js/custom/home.js"></script>
<!-- custom js end -->
<!-- third party css -->
<link href="/assets/css/vendor/dataTables.bootstrap4.css"
      rel="stylesheet"
      type="text/css" />
<link href="/assets/css/vendor/responsive.bootstrap4.css"
      rel="stylesheet"
      type="text/css" />
<!-- third party css end -->
<!-- App css -->
<link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/css/app.min.css"
      rel="stylesheet"
      type="text/css"
      id="light-style" />
<link href="/assets/css/app-dark.min.css"
      rel="stylesheet"
      type="text/css"
      id="dark-style" />
<!--custom css-->
<link rel="stylesheet"
      type="text/css"
      href="/assets/css/custom/detailCertificate.css" />



<div class="general">
    <!--Title-->
    <h3 class="title-cert">Managing Project Risks and Changes</h3>

    <div class="row mt-5">
        <div class="col-6">
            <!--User Info-->
            <div class="row no-gutters align-items-center p-2" style="background-color: #D5EAF2">
                <div class="col-sm-2">
                    <img src="~/assets/images/custom/cert-course@2x.png" class="card-img" style="width: 73px; height: 73px; border-radius: 50%">
                </div>
                <div class="col-sm-10">
                    <div class="card-body">
                        <p class="card-title font-20">Completed by <span class="text-uppercase font-weight-bold">Lisa Monoban</span></p>
                        <p class="card-text font-weight-bold">November 22, 2020</p>
                        <p class="card-text font-weight-bold">Grade Achieved: </p>
                    </div>
                </div>
            </div>

            <!--Provided By-->
            <div class="no-gutters align-items-center mt-5 p-2 col-7" style="background-color: #D5EAF2">
                <p class="font-weight-bold">PROVIDED BY</p>
                <div class="row no-gutters align-items-center" style="background-color: #ffffff">
                    <div class="col-sm-2">
                        <img src="~/assets/images/custom/fptu.jpg" class="card-img" style="width: 73px;">
                    </div>
                    <div class="col-sm-10">
                        <div class="card-body">
                            <h5 class="card-title">FPT University</h5>
                            <p class="card-text">Campus: Hoa Lac</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Certificate Image-->
        <div class="col-6">
            <img src="~/Assets/images/custom/cert-prototype.jpg" />
            <div class="mt-2 d-flex justify-content-center">
                <button type="button" class="btn btn-share text-white" onclick="">
                    Share Certificate
                </button>
                <button type="button" class="btn btn-download ml-2" onclick="">
                    Download certificates
                </button>
            </div>
        </div>

    </div>
</div>

