@model eCert.Models.Certificate
@using eCert.Models
@using eCert.Utilities


<!-- third party css -->
<link href="/assets/css/vendor/dataTables.bootstrap4.css"
      rel="stylesheet"
      type="text/css" />
<link href="/assets/css/vendor/responsive.bootstrap4.css"
      rel="stylesheet"
      type="text/css" />
<!-- third party css end -->
<!-- App css -->
<link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/css/app.min.css"
      rel="stylesheet"
      type="text/css"
      id="light-style" />
<link href="/assets/css/app-dark.min.css"
      rel="stylesheet"
      type="text/css"
      id="dark-style" />
<!--Custom css-->
<link href="~/assets/CSS/custom/listCertificate.css"
      rel="stylesheet"
      type="text/css" />
<!-- Home screen -->

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-between p-2">
                    <div class="add-cert">
                        <button type="button" class="btn btn-primary"
                                onclick="showFormModal('Add a certificate', 'Add')">
                            <i class="mdi mdi-plus-circle mr-2"></i>Add a certificate
                        </button>

                    </div>

                    <div class="export-all">
                        <button type="button" class="btn btn-danger mb-2">
                            Export all certificates
                        </button>
                    </div>
                    <!-- end col-->
                </div>
                @ViewBag.message
                <!--Generate list certificate-->
                @foreach (Certificate certificate in ViewBag.Pagination.PagingData)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card card-custom">
                                <div class="row no-gutters align-items-center">
                                    <div class="col-md-1 d-none d-md-block">
                                        <img src="~/assets/images/custom/cert-course@2x.png" class="card-img" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <a href="#" class="text-decoration-none text-black-50">
                                                <h5 class="card-title">@certificate.CertificateName</h5>
                                            </a>
                                            @if (certificate.Format == Constants.CertificateFormat.LINK)
                                            {
                                                <a href="@certificate.Content" class="text-decoration-none text-black-50" target="_blank">
                                                    <p class="card-text text-primary mb-2"><i class="uil-link-alt"></i>@certificate.Content</p>
                                                </a>
                                            }
                                            else if (certificate.Format == Constants.CertificateFormat.PDF || certificate.Format == Constants.CertificateFormat.JPG
                                                || certificate.Format == Constants.CertificateFormat.PNG || certificate.Format == Constants.CertificateFormat.JPEG)
                                            {
                                                <a href="#" class="text-decoration-none text-black-50">
                                                    <p class="card-text text-primary">
                                                        <i class="uil-file-minus"></i>
                                                        <a href="/Home/DownloadCertificate?certificateId=@certificate.CertificateID">@certificate.Content</a>
                                                    </p>
                                                </a>
                                            }

                                            @if (certificate.Type == Constants.CertificateType.FPT)
                                            {
                                                <p class="card-text text-primary">Subject code: PRJ321</p>
                                            }

                                            <p class="card-text">
                                                @if (certificate.Type == Constants.CertificateType.FPT)
                                                {
                                                    <small class="bg-danger text-white type-cert">FPT University</small>
                                                }
                                                else if (certificate.Type == Constants.CertificateType.PERSONAL)
                                                {
                                                    <small class="bg-success text-white type-cert">Personal's Certificate</small>
                                                }
                                            </p>
                                        </div> <!-- end card-body-->
                                    </div> <!-- end col -->
                                    <div class="col-md-3">
                                        <div class="row float-lg-right mr-lg-4 mr-sm-0 ml-3 mb-2">
                                            <button type="button" class="btn border border-primary mr-2 text-primary" onclick="showFormModal('Edit a certificate', 'Save')">
                                                Edit
                                            </button>
                                            <button type="button" class="btn border border-danger mr-2 text-danger" data-toggle="modal" data-target="#delete-modal">
                                                Delete
                                            </button>
                                        </div>
                                        <!--Delete Modal-->
                                        @using (Html.BeginForm("Delete", "Home", new { certId = certificate.CertificateID }, FormMethod.Post))
                                        {
                                            <div id="delete-modal" class="modal fade" tabindex="-1" role="dialog"
                                                 aria-labelledby="compose-header-modalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header modal-colored-header bg-primary">
                                                            <h4 class="modal-title" id="compose-header-modalLabel">Are you sure to delete this certificate?</h4>
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        </div>
                                                        <div class="modal-body p-3 d-flex justify-content-center">
                                                            <button type="submit" class="btn btn-primary">Yes</button>
                                                            <button type="button" class="btn btn-light ml-4" data-dismiss="modal">No</button>
                                                        </div>
                                                    </div><!-- /.modal-content -->
                                                </div><!-- /.modal-dialog -->
                                            </div><!-- /.modal -->
                                        }
                                    </div>
                                </div> <!-- end row-->
                            </div> <!-- end card-->
                        </div>
                    </div>

                }
                <!--End generate list certificate-->


                <nav aria-label="..." class="d-flex justify-content-center">
                    <ul class="pagination mb-0">
                        <!-- Previous button -->
                        @if (ViewBag.Pagination.PageNumber <= 1)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item ">
                                <a class="page-link" href="/Home/Index?pageNumber=@(ViewBag.Pagination.PageNumber - 1)" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                        }
                        <!-- End previous button -->
                        <!-- Display page numbers -->
                        @if (ViewBag.Pagination.MaxPage <= 3)
                        {
                            for (int i = 1; i <= ViewBag.Pagination.MaxPage; i++)
                            {
                                if (i == ViewBag.Pagination.PageNumber)
                                {
                                    <li class="page-item active"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                }
                            }
                        }
                        else
                        {
                            if (ViewBag.Pagination.PageNumber == 1)
                            {
                                for (int i = 1; i <= 3; i++)
                                {
                                    if (i == ViewBag.Pagination.PageNumber)
                                    {
                                        <li class="page-item active"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                }
                            }
                            else if (ViewBag.Pagination.PageNumber == ViewBag.Pagination.MaxPage)
                            {
                                for (int i = ViewBag.Pagination.MaxPage - 2; i <= ViewBag.Pagination.MaxPage; i++)
                                {
                                    if (i == ViewBag.Pagination.PageNumber)
                                    {
                                        <li class="page-item active"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                }
                            }
                            else
                            {
                                for (int i = ViewBag.Pagination.PageNumber - 1; i <= ViewBag.Pagination.PageNumber + 1; i++)
                                {
                                    if (i == ViewBag.Pagination.PageNumber)
                                    {
                                        <li class="page-item active"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="/Home/Index?pageNumber=@i">@i</a></li>
                                    }
                                }
                            }
                        }
                        <!-- End display page numbers-->
                        <!-- Next button -->
                        @if (ViewBag.Pagination.PageNumber >= ViewBag.Pagination.MaxPage)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item ">
                                <a class="page-link" href="/Home/Index?pageNumber=@(ViewBag.Pagination.PageNumber + 1)" tabindex="-1" aria-disabled="true">Next</a>
                            </li>
                        }
                        <!-- End next button -->
                    </ul>
                </nav>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card-->
    </div>
    <!-- end col -->
</div>

<script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>

<!-- Display message to user -->
@if (TempData["Msg"] != null)
{
    <script type="text/javascript">
          $(document).ready(function() {
            var data = '@TempData["Msg"]';
              $.NotificationApp.send("Message", data, "top-center", "Background color", "Icon")
          });

    </script>
}
@Html.Partial("_CertificateForm")

<script src="/assets/js/vendor.min.js"></script>
<script src="/assets/js/app.min.js"></script>

<!-- custom js -->
<script src="~/assets/js/custom/home.js"></script>
<!-- custom js end -->
